extends ./layouts/admin.jade
block content
  .page-header
    include ./layouts/errors.jade
  h3(align = 'center')
    <span class="glyphicon glyphicon-share"></span> Login
  form.form-horizontal(action='/admin/login' ,method='POST')
    .form-group
      label.col-sm-3.control-label(for='name') Username
      .col-sm-7
        input.form-control(type='text', name='name', id='name', placeholder='Username', autofocus="2" )
    .form-group
      label.col-sm-3.control-label(for='password') Password
      .col-sm-7
        input.form-control(type='password', name='password', id='password', placeholder='Password',autofocus="2")
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-user
          | Login

